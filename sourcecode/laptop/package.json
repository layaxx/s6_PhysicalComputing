{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "concurrently \"yarn proxy\" \"yarn dev\"",
    "dev": "vite",
    "proxy": "ts-node scripts/proxy.ts",
    "benchmark": "ts-node scripts/benchmark.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "xo"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.3.0",
    "@types/density-clustering": "^1.3.0",
    "@types/node": "^18.7.14",
    "@types/ws": "^8.5.3",
    "vite": "^3.1.0",
    "vitest": "^0.23.2",
    "xo": "^0.52.3"
  },
  "dependencies": {
    "chart.js": "^3.9.1",
    "chartjs-chart-matrix": "^1.1.1",
    "concurrently": "^7.4.0",
    "dayjs": "^1.11.5",
    "density-clustering": "^1.3.0",
    "preact": "^10.10.6",
    "react-chartjs-2": "^4.3.1",
    "serialport": "^10.4.0",
    "ta.js": "^1.12.0",
    "ta.web": "^1.12.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "ws": "^8.8.1"
  },
  "xo": {
    "prettier": true,
    "ignores": [
      "src/vite-env.d.ts",
      "src/classification/data/combined.json"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-assertions": "off",
      "eslint-comments/no-unused-disable": "off",
      "import/extensions": "off",
      "import/no-cycle": "off",
      "import/no-mutable-exports": "off",
      "unicorn/filename-case": [
        "error",
        {
          "case": "camelCase"
        }
      ],
      "unicorn/no-array-for-each": "off",
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "default",
          "format": [
            "camelCase"
          ]
        },
        {
          "selector": "variable",
          "format": [
            "camelCase",
            "UPPER_CASE"
          ],
          "leadingUnderscore": "allow"
        },
        {
          "selector": "parameter",
          "format": [
            "camelCase"
          ],
          "leadingUnderscore": "allow"
        },
        {
          "selector": "memberLike",
          "modifiers": [
            "private"
          ],
          "format": [
            "camelCase"
          ],
          "leadingUnderscore": "require"
        },
        {
          "selector": "typeLike",
          "format": [
            "PascalCase"
          ]
        },
        {
          "selector": "enumMember",
          "format": [
            "UPPER_CASE"
          ]
        },
        {
          "selector": "property",
          "format": [
            "UPPER_CASE",
            "camelCase"
          ]
        },
        {
          "selector": "function",
          "format": [
            "PascalCase",
            "camelCase"
          ]
        }
      ]
    }
  }
}
